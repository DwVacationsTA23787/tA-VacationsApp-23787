@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="vh-100 mb-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">
                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" style="width: 23rem;">
                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign up</h3>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.Name" class="form-control form-control-lg" autocomplete="name" />
                            <label asp-for="Input.Name">Your Name</label>
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" />
                            <label asp-for="Input.Email">Your Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="new-password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.DataNascimento" type="date" class="form-control form-control-lg" />
                            <label asp-for="Input.DataNascimento">Birthdate</label>
                            <span asp-validation-for="Input.DataNascimento" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.Gender" class="form-control form-control-lg" />
                            <label asp-for="Input.Gender">Gender</label>
                            <span asp-validation-for="Input.Gender" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.Phone" class="form-control form-control-lg" />
                            <label asp-for="Input.Phone">Phone</label>
                            <span asp-validation-for="Input.Phone" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.Quote" class="form-control form-control-lg" />
                            <label asp-for="Input.Quote">Quote</label>
                            <span asp-validation-for="Input.Quote" class="text-danger"></span>
                        </div>

                      @{
                           /*
                     
                        <div class="form-check mb-4">
                            <input asp-for="Input.agreeTerms" class="form-check-input" />
                            <label class="form-check-label" asp-for="Input.agreeTerms">I agree to all statements in <a href="#">Terms of service</a></label>
                            <span asp-validation-for="Input.agreeTerms" class="text-danger"></span>
                        </div>
                        */
                        }

                        <div class="pt-1 mb-4 mt-2">
                            <button id="registerSubmit" type="submit" class="btn btn-info btn-lg btn-block">Register</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="~/images/adventure.jpg" alt="Register image" class="w-100 vh-100" style="object-fit: cover; object-position: left;" />
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

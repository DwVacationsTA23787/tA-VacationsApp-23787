@model Dw23787.Models.Trips

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid">

<h1>Edit</h1>

<h4>Trips</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-2">
                <label asp-for="TripName" class="control-label"></label>
                <input asp-for="TripName" class="form-control" />
                <span asp-validation-for="TripName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Category" class="control-label">Category</label>
                <select asp-for="Category" class="form-control">
                    @foreach (var category in Enum.GetValues(typeof(Dw23787.Models.Trips.TripCategory)))
                    {
                        <option value="@category">@category</option>
                    }
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Transport" class="control-label">Transport</label>
                <select asp-for="Transport" class="form-control">
                    @foreach (var transport in Enum.GetValues(typeof(Dw23787.Models.Trips.TripTransport)))
                    {
                        <option value="@transport">@transport</option>
                    }
                </select>
                <span asp-validation-for="Transport" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="InicialBudget" class="control-label"></label>
                <input asp-for="InicialBudget" class="form-control" />
                <span asp-validation-for="InicialBudget" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="FinalBudget" class="control-label"></label>
                <input asp-for="FinalBudget" class="form-control" />
                <span asp-validation-for="FinalBudget" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Banner" class="control-label"></label>
                <input type="file" asp-for="Banner" class="form-control" />
                <span asp-validation-for="Banner" class="text-danger"></span>
            </div>
            <div class="form-group form-check mb-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Closed" /> @Html.DisplayNameFor(model => model.Closed)
                </label>
            </div>
                <div class="form-group mb-2">
                    <label asp-for="Location" class="control-label">Location</label>
                    <select asp-for="Location" class="form-control" asp-items="ViewBag.Countries">
                        <option value="">Select Country</option>
                    </select>
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
